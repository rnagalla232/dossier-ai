# Dossier AI Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== API Keys ====================
# OpenAI API Key (required for embeddings and some LLM operations)
OPENAI_API_KEY=your_openai_api_key_here

# Snowflake Cortex API Key (required for LLM inference)
SNOWFLAKE_API_KEY=your_snowflake_api_key_here

# ==================== Database Configuration ====================
# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name
MONGODB_DATABASE=dossier_ai

# ==================== Vector Database Configuration ====================
# Qdrant vector database URL
QDRANT_URL=http://localhost:6333

# Qdrant API key (optional, leave empty for local development)
QDRANT_API_KEY=

# ==================== Snowflake Configuration ====================
# Snowflake Cortex base URL
SNOWFLAKE_BASE_URL=https://your-account.snowflakecomputing.com/api/v2/cortex/v1

# Snowflake LLM model name
SNOWFLAKE_MODEL=llama3.1-70b

# ==================== Application Settings ====================
# Enable debug mode (true/false)
DEBUG=false

# Worker polling interval in seconds
WORKER_POLL_INTERVAL=2

# ==================== LLM Settings ====================
# Maximum completion tokens for LLM responses
MAX_COMPLETION_TOKENS=2000

# Temperature for LLM generation (0.0 to 1.0)
TEMPERATURE=0.3
